@model DogGo.Models.ViewModels.WalkerProfileViewModel


    @{ ViewData["Title"] = "Profile"; }
<div>
    <h1 class="mb-4">@Model.Walker.Name</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" alt="avatar" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Address:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Walks</h1>

            <div class="row">
                <section class="col-8 container mt-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Walks[0].Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Walks[0].Owner.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Walks[0].Duration)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Walks)
                            {
                                <tr>
                                    <td>
                                        @item.Date
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.Name)
                                    </td>
                                    <td>
                                        @{ int durationInMinutes = item.Duration / 60; }
                                        @Html.DisplayFor(modelItem => durationInMinutes) minutes
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
                <section class="col-lg-4 col-md-8 container mt-5">

                    <h4>Total Walk Time: @Html.DisplayFor(model => model.TotalDuration)</h4>
                </section>
            </div>
        </section>
    </div>
    <div>
        
        <a asp-action="Index">Back to List</a>
    </div>




